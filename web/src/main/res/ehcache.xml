<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="false"
         monitoring="autodetect"
         dynamicConfig="true">
         
    <diskStore path="java.io.tmpdir/ap"/>


    <cache name="paramCache"
           maxEntriesLocalHeap="500"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           memoryStoreEvictionPolicy="FIFO"
            />

    <cache name="dd"
           maxEntriesLocalHeap="2000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           memoryStoreEvictionPolicy="FIFO"
    />
    <cache name="userRoles"
           maxEntriesLocalHeap="5000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           memoryStoreEvictionPolicy="FIFO"
    />
    <cache name="user"
           maxEntriesLocalHeap="5000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           memoryStoreEvictionPolicy="FIFO"
    />
    <cache name="userReses"
           maxEntriesLocalHeap="5000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           memoryStoreEvictionPolicy="FIFO"
    />
    <cache name="currUserReses"
           maxEntriesLocalHeap="50000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           memoryStoreEvictionPolicy="FIFO"
    />
    <cache name="currUserRoles"
           maxEntriesLocalHeap="50000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           memoryStoreEvictionPolicy="FIFO"
    />
    <cache name="currUser"
           maxEntriesLocalHeap="50000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           memoryStoreEvictionPolicy="FIFO"
    />

    <cache name="login"
           maxEntriesLocalHeap="50000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           memoryStoreEvictionPolicy="FIFO"
    />

</ehcache>
